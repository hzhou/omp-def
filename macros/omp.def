subcode: _autoload
    $include <omp.h>

macros:
    num_threads: omp_get_num_threads()
    omp_N: omp_get_num_threads()
    omp_id: omp_get_thread_num()

subcode: omp_parallel(N, @t)
    &call omp, parallel num_threads($(N)) $(t)
        BLOCK

subcode: omp_for(@iter)
    #pragma omp parallel for
    $for $(iter)
        BLOCK

subcode: omp_barrier
    #pragma omp barrier

#---------------------------------------- 
subcode: omp(@P)
    #pragma omp $(P)
    {
        BLOCK
    }
